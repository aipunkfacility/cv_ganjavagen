---
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const competencies = [
	{ title: t('comp.title1'), text: t('comp.desc1') },
	{ title: t('comp.title2'), text: t('comp.desc2') },
	{ title: t('comp.title3'), text: t('comp.desc3') },
	{ title: t('comp.title4'), text: t('comp.desc4') },
	{ title: t('comp.title5'), text: t('comp.desc5') }
];
---

<section id="competencies" class="competencies">
	<div class="container">
		<h2 class="section-title reveal">{t('nav.competencies')}</h2>
		<div class="competencies-grid">
			{competencies.map((item, index) => (
				<div class="comp-card reveal" style={`animation-delay: ${0.1 * (index + 1)}s`}>
                    <div class="comp-card-inner">
                        <div class="comp-card-icon">
                            <i class="ri-check-double-line"></i>
                        </div>
                        <h3>{item.title}</h3>
                        <p>{item.text}</p>
                    </div>
				</div>
			))}
		</div>
	</div>
</section>

<style>
	.competencies {
		/* Background inherited from global section style */
	}

	.section-title {
		margin-bottom: var(--spacing-medium);
		text-align: center;
		text-transform: uppercase;
		letter-spacing: 0.15em;
		font-size: clamp(1.2rem, 2vw, 1.5rem);
        color: var(--color-heading);
	}

	.competencies-grid {
		display: grid;
		grid-template-columns: repeat(3, 1fr);
		gap: 2.5rem;
	}

	.comp-card {
		position: relative;
		border-radius: 12px;
		background: var(--color-surface);
		border: 1px solid var(--color-border);
		box-shadow: var(--glass-shadow);
		transition: all 0.5s cubic-bezier(0.19, 1, 0.22, 1);
        overflow: hidden;
	}

    .comp-card-inner {
		padding: 3rem 2.5rem;
        z-index: 1;
        position: relative;
    }

	.comp-card:hover {
		transform: translateY(-10px);
		box-shadow: 0 20px 40px hsla(0, 0%, 0%, 0.1);
        border-color: var(--color-accent);
	}

    .comp-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 4px;
        background: linear-gradient(90deg, var(--color-accent), var(--color-detail));
        transform: scaleX(0);
        transform-origin: left;
        transition: transform 0.5s ease;
    }

    .comp-card:hover::before {
        transform: scaleX(1);
    }

    .comp-card-icon {
        font-size: 2rem;
        color: var(--color-accent);
        margin-bottom: 1.5rem;
    }

	.comp-card h3 {
		font-size: 1.25rem;
		margin-bottom: 1.5rem;
		text-transform: uppercase;
		letter-spacing: 0.05em;
		color: var(--color-heading);
		line-height: 1.2;
	}

	.comp-card p {
		font-size: 0.95rem;
		color: var(--color-text-muted);
		line-height: 1.7;
	}

	@media (max-width: 1100px) {
		.competencies-grid {
			grid-template-columns: repeat(2, 1fr);
		}
	}

	@media (max-width: 768px) {
		.competencies-grid {
			grid-template-columns: 1fr;
			gap: 1.5rem;
		}

		.comp-card-inner {
			padding: 2rem;
		}

		.comp-card h3 {
			font-size: 1.1rem;
			margin-bottom: 1rem;
		}
	}
</style>
