---
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const competencies = [
	{ title: t('comp.title1'), text: t('comp.desc1') },
	{ title: t('comp.title2'), text: t('comp.desc2') },
	{ title: t('comp.title3'), text: t('comp.desc3') },
	{ title: t('comp.title4'), text: t('comp.desc4') },
	{ title: t('comp.title5'), text: t('comp.desc5') }
];
---

<section id="competencies">
	<div class="container">
		<h2 class="section-title">{t('nav.competencies')}</h2>
		<div class="competencies-grid">
			{competencies.map(item => (
				<div class="comp-card">
					<h3>{item.title}</h3>
					<p>{item.text}</p>
				</div>
			))}
		</div>
	</div>
</section>

<style>
	.section-title {
		margin-bottom: var(--spacing-medium);
		text-align: center;
		text-transform: uppercase;
		letter-spacing: 0.1em;
		font-size: 1.5rem;
	}

	.competencies-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
		gap: 3rem;
	}

	.comp-card {
		padding: 2.5rem;
		background: #fff;
		border: 1px solid #f0f0f0;
		border-top: 3px solid var(--color-accent);
		border-radius: 0 0 4px 4px;
		transition: all 0.3s ease;
	}

	.comp-card:hover {
		transform: translateY(-5px);
		border-color: #ddd;
		box-shadow: 0 10px 30px rgba(0,0,0,0.05);
	}

	.comp-card h3 {
		font-size: 1.3rem;
		margin-bottom: 1.5rem;
		text-transform: uppercase;
		letter-spacing: 0.05em;
		color: var(--color-text);
		line-height: 1.2;
	}

	.comp-card p {
		font-size: 0.95rem;
		opacity: 0.8;
		line-height: 1.7;
	}

	@media (max-width: 768px) {
		.competencies-grid {
			grid-template-columns: 1fr;
			gap: 0.75rem; /* Reduced from 1rem */
		}

		.comp-card {
			padding: 1rem 1.25rem; /* Reduced from 1.5rem */
		}

		.comp-card h3 {
			font-size: 1.1rem; /* Reduced from 1.15rem */
			margin-bottom: 0.5rem; /* Reduced from 0.8rem */
		}

		.comp-card p {
			font-size: 0.85rem; /* Reduced from 0.9rem */
			line-height: 1.4;
			opacity: 0.75;
		}

		.section-title {
			font-size: 1.1rem;
			margin-bottom: 1.2rem; /* Reduced from 1.5rem */
		}
	}
</style>
