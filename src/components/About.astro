---
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---
<section id="about">
	<div class="container about-container">
		<h2>{t('about.title')}</h2>
		<p class="about-p1">
			{t('about.p1')}
		</p>
		<p class="about-p2">
			{t('about.p2')}
		</p>

		<div class="about-details">
			<div class="detail-item">
				<h3>{t('footer.edu_title')}</h3>
				<p>{t('footer.edu_desc')}</p>
			</div>
			<div class="detail-item">
				<h3>{t('footer.philo_title')}</h3>
				<p>{t('footer.philo_desc')}</p>
			</div>
		</div>
	</div>
</section>

<style>
	section#about {
		background-color: var(--color-bg-alt);
	}

	.about-container {
		max-width: 800px;
		text-align: left;
	}

	.about-container h2 {
		font-size: 2.5rem;
		margin-bottom: 2rem;
		color: var(--color-accent);
	}

	.about-p1 {
		font-size: 1.15rem;
		margin-bottom: 1.5rem;
		line-height: 1.8;
	}

	.about-p2 {
		font-size: 1.15rem;
		font-weight: 600;
		line-height: 1.8;
		color: var(--color-detail);
		margin-bottom: 3rem;
	}

	.about-details {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 3rem;
		margin-top: 3rem;
		border-top: 1px solid var(--color-border);
		padding-top: 3rem;
	}

	.detail-item h3 {
		font-size: 1.1rem;
		text-transform: uppercase;
		letter-spacing: 0.05em;
		margin-bottom: 1rem;
		color: var(--color-accent);
	}

	.detail-item p {
		font-size: 0.95rem;
		opacity: 0.8;
		line-height: 1.7;
	}

	@media (max-width: 768px) {
		.about-container {
			text-align: center;
		}
		
		.about-container h2 {
			font-size: 2.2rem;
			margin-bottom: 1.5rem;
		}

		.about-p1, .about-p2 {
			font-size: 1.1rem;
		}

		.about-details {
			grid-template-columns: 1fr;
			gap: 2rem;
			text-align: left;
		}
	}
</style>
