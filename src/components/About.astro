---
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---
<section id="about" class="about">
	<div class="container about-container reveal">
		<h2 class="section-title-small">{t('about.title')}</h2>
		<p class="about-p1">
			{t('about.p1')}
		</p>
		<p class="about-p2">
			{t('about.p2')}
		</p>

		<div class="about-details">
			<div class="detail-item reveal" style="animation-delay: 0.2s;">
				<h3>{t('footer.edu_title')}</h3>
				<p>{t('footer.edu_desc')}</p>
			</div>
			<div class="detail-item reveal" style="animation-delay: 0.4s;">
				<h3>{t('footer.philo_title')}</h3>
				<p>{t('footer.philo_desc')}</p>
			</div>
		</div>
	</div>
</section>

<style>
	.about {
		/* Background inherited from global section style */
	}

	.about-container {
		max-width: 900px;
		text-align: left;
	}

	.section-title-small {
		font-size: clamp(2rem, 4vw, 3rem);
		margin-bottom: 2.5rem;
		color: var(--color-accent);
	}

	.about-p1 {
		font-size: clamp(1rem, 1.2vw, 1.25rem);
		margin-bottom: 2rem;
		line-height: 1.8;
        color: var(--color-text);
	}

	.about-p2 {
		font-size: clamp(1.1rem, 1.4vw, 1.4rem);
		font-weight: 600;
		line-height: 1.6;
		color: var(--color-detail);
		margin-bottom: 4rem;
        font-family: var(--font-serif);
	}

	.about-details {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 4rem;
		margin-top: 4rem;
		border-top: 1px solid var(--color-border);
		padding-top: 4rem;
	}

	.detail-item h3 {
		font-size: 1rem;
		text-transform: uppercase;
		letter-spacing: 0.1em;
		margin-bottom: 1.25rem;
		color: var(--color-heading);
	}

	.detail-item p {
		font-size: 0.95rem;
		color: var(--color-text-muted);
		line-height: 1.7;
	}

	@media (max-width: 768px) {
		.about-container {
			text-align: center;
		}
		
		.about-p1, .about-p2 {
			text-align: left;
		}

		.about-details {
			grid-template-columns: 1fr;
			gap: 3rem;
			text-align: left;
            padding-top: 2.5rem;
            margin-top: 2.5rem;
		}
	}
</style>
