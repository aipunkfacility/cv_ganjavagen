---
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const steps = [
	{ id: '01', title: t('method.step1_title'), desc: t('method.step1_desc') },
	{ id: '02', title: t('method.step2_title'), desc: t('method.step2_desc') },
	{ id: '03', title: t('method.step3_title'), desc: t('method.step3_desc') },
	{ id: '04', title: t('method.step4_title'), desc: t('method.step4_desc') },
];
---
<section id="method" class="methods">
	<div class="container">
		<h2 class="section-title">{t('method.title')}</h2>
		<div class="method-grid">
			{steps.map(step => (
				<div class="method-card">
					<span class="step-number">{step.id}</span>
					<h3>{step.title}</h3>
					<p>{step.desc}</p>
				</div>
			))}
		</div>
	</div>
</section>

<style>
	.methods {
		background-color: var(--color-bg);
	}

	.section-title {
		margin-bottom: var(--spacing-medium);
		text-align: center;
		text-transform: uppercase;
		letter-spacing: 0.1em;
		font-size: 1.5rem;
	}

	.method-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
		gap: 3rem;
	}

	.method-card {
		padding: 0 1rem;
		text-align: left;
	}

	.step-number {
		display: block;
		font-family: var(--font-serif);
		font-size: 3rem;
		color: var(--color-detail);
		opacity: 0.3;
		margin-bottom: 1rem;
		line-height: 1;
	}

	.method-card h3 {
		font-size: 1.1rem;
		margin-bottom: 1rem;
		text-transform: uppercase;
		letter-spacing: 0.05em;
	}

	.method-card p {
		font-size: 0.9rem;
		opacity: 0.8;
		line-height: 1.7;
	}

	@media (max-width: 768px) {
		.method-grid {
			grid-template-columns: 1fr;
			gap: 2.5rem;
		}

		.method-card {
			text-align: center;
			padding: 0;
		}

		.step-number {
			font-size: 2.5rem;
			margin-bottom: 0.5rem;
		}

		.section-title {
			font-size: 1.3rem;
			margin-bottom: 3rem;
		}
	}
</style>
