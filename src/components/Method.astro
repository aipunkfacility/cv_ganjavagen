---
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const steps = [
	{ id: '01', title: t('method.step1_title'), desc: t('method.step1_desc') },
	{ id: '02', title: t('method.step2_title'), desc: t('method.step2_desc') },
	{ id: '03', title: t('method.step3_title'), desc: t('method.step3_desc') },
	{ id: '04', title: t('method.step4_title'), desc: t('method.step4_desc') },
];
---
<section id="method" class="methods">
	<div class="container">
		<h2 class="section-title reveal">{t('method.title')}</h2>
		<div class="method-grid">
			{steps.map((step, index) => (
				<div class="method-card reveal" style={`animation-delay: ${0.15 * (index + 1)}s`}>
					<span class="step-number">{step.id}</span>
                    <div class="method-content">
					    <h3>{step.title}</h3>
					    <p>{step.desc}</p>
                    </div>
				</div>
			))}
		</div>
	</div>
</section>

<style>
	.methods {
		background-color: var(--color-bg-alt);
	}

	.section-title {
		margin-bottom: var(--spacing-medium);
		text-align: center;
		text-transform: uppercase;
		letter-spacing: 0.15em;
		font-size: clamp(1.2rem, 2vw, 1.5rem);
        color: var(--color-accent);
	}

	.method-grid {
		display: grid;
		grid-template-columns: repeat(4, 1fr);
		gap: 3rem;
	}

	.method-card {
		padding: 0;
		text-align: left;
        position: relative;
        transition: transform 0.4s ease;
	}

    .method-card:hover {
        transform: translateY(-5px);
    }

	.step-number {
		display: block;
		font-family: var(--font-serif);
		font-size: 4rem;
		color: var(--color-accent);
		opacity: 0.1;
		margin-bottom: -1.5rem;
		line-height: 1;
        font-weight: 900;
	}

	.method-card h3 {
		font-size: 1.1rem;
		margin-bottom: 1.25rem;
		text-transform: uppercase;
		letter-spacing: 0.1em;
        color: var(--color-accent);
        position: relative;
	}

	.method-card p {
		font-size: 0.95rem;
		color: var(--color-text-muted);
		line-height: 1.7;
	}

	@media (max-width: 1024px) {
		.method-grid {
			grid-template-columns: repeat(2, 1fr);
            gap: 4rem;
		}
	}

	@media (max-width: 768px) {
		.method-grid {
			grid-template-columns: 1fr;
			gap: 3.5rem;
		}

		.method-card {
			text-align: left;
		}

		.section-title {
			margin-bottom: 4rem;
		}

        .step-number {
            font-size: 3.5rem;
        }
	}
</style>
