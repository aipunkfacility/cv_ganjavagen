<style>
	.cta-section {
		background-color: var(--color-cta-bg);
		color: #fff;
		min-height: auto;
		padding: var(--spacing-large) 0;
		scroll-snap-align: end;
	}

	.cta-card {
		text-align: center;
		max-width: 800px;
		margin: 0 auto;
	}

	.cta-card h2 {
		font-size: 2.5rem;
		margin-bottom: 3rem;
		text-transform: uppercase;
		letter-spacing: -0.02em;
	}

	.contact-buttons {
		display: flex;
		gap: 2rem;
		justify-content: center;
		flex-wrap: wrap;
	}

	.contact-btn {
		display: flex;
		align-items: center;
		justify-content: center;
		width: 80px;
		height: 80px;
		border-radius: 16px;
		text-decoration: none;
		color: #fff;
		transition: all 0.3s cubic-bezier(0.165, 0.84, 0.44, 1);
		box-shadow: 0 4px 15px rgba(0,0,0,0.1);
	}

	.contact-btn i, .zalo-icon {
		width: 4.2rem;
		height: 4.2rem;
		flex-shrink: 0;
	}

	.contact-btn i {
		font-size: 4.2rem;
		line-height: 1;
	}

	.contact-btn.telegram {
		background: #0088cc;
	}

	.contact-btn.zalo {
		background: #0068ff;
	}

	.contact-btn:hover {
		transform: translateY(-5px);
		box-shadow: 0 8px 25px rgba(0,0,0,0.2);
	}

	@media (max-width: 768px) {
		.cta-section {
			padding: var(--spacing-large) 1rem;
		}

		.cta-card h2 {
			font-size: 1.8rem;
			margin-bottom: 2.5rem;
		}

		.contact-buttons {
			gap: 1.5rem;
		}

		.contact-btn {
			width: 70px;
			height: 70px;
			border-radius: 14px;
		}

		.contact-btn i, .zalo-icon {
			width: 3.6rem;
			height: 3.6rem;
		}
	}
</style>
