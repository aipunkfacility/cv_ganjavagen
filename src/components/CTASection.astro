---
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---
<section id="contact" class="cta-section">
	<div class="container reveal">
		<div class="cta-card">
			<h2 class="hero-title">{t('contact.title')}</h2>
			<div class="contact-buttons">
				<a href="https://t.me/ganjavagen" class="contact-btn telegram" aria-label="Telegram" target="_blank" rel="noopener noreferrer">
					<i class="ri-telegram-fill"></i>
				</a>
				<a href="https://zalo.me/84946943543" class="contact-btn zalo" aria-label="Zalo" target="_blank" rel="noopener noreferrer">
					<i class="ri-zalo-fill"></i>
				</a>
			</div>
		</div>
	</div>
</section>

<style>
	.cta-section {
		background-color: var(--color-bg);
		color: var(--color-text);
		padding: var(--spacing-large) 0;
	}

	.cta-card {
		text-align: center;
		max-width: 800px;
		margin: 0 auto;
	}

	.cta-card h2 {
		font-size: clamp(2rem, 5vw, 4rem);
		margin-bottom: 4rem;
		text-transform: uppercase;
		letter-spacing: -0.02em;
        color: var(--color-heading);
        line-height: 1;
	}

	.contact-buttons {
		display: flex;
		gap: 3rem;
		justify-content: center;
		flex-wrap: wrap;
	}

	.contact-btn {
		display: flex;
		align-items: center;
		justify-content: center;
		width: 90px;
		height: 90px;
		border-radius: 20px;
		text-decoration: none;
		color: #fff;
		transition: all 0.5s cubic-bezier(0.19, 1, 0.22, 1);
		box-shadow: 0 10px 30px rgba(0,0,0,0.2);
        position: relative;
        overflow: hidden;
	}

    .contact-btn::after {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(255,255,255,0.1);
        opacity: 0;
        transition: opacity 0.3s ease;
    }

    .contact-btn:hover::after {
        opacity: 1;
    }

	.contact-btn i, .contact-btn svg {
		flex-shrink: 0;
        z-index: 1;
	}

	.contact-btn i {
		font-size: 4.5rem;
		line-height: 1;
        width: 4.5rem;
        height: 4.5rem;
        display: flex;
        align-items: center;
        justify-content: center;
	}

    .contact-btn svg {
        width: 4.5rem;
        height: 4.5rem;
    }

	.contact-btn.telegram {
		background: linear-gradient(135deg, #0088cc, #00aaff);
	}

	.contact-btn.zalo {
		background: linear-gradient(135deg, #0068ff, #3fa9ff);
	}

	.contact-btn:hover {
		transform: translateY(-8px) scale(1.05);
		box-shadow: 0 20px 40px rgba(0,0,0,0.3);
	}

	@media (max-width: 768px) {
		.cta-section {
			padding: var(--spacing-large) 1.5rem;
		}

		.contact-buttons {
			gap: 2rem;
		}

		.contact-btn {
			width: 80px;
			height: 80px;
			border-radius: 16px;
		}

		.contact-btn i {
			width: 3.8rem;
			height: 3.8rem;
		}
	}
</style>
