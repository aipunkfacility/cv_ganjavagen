---
import '../styles/index.css';
import { getLangFromUrl, useTranslations } from '../i18n/utils';
import LanguagePicker from '../components/LanguagePicker.astro';
import ThemeSwitcher from '../components/ThemeSwitcher.astro';

interface Props {
	title: string;
	description?: string;
}

const { title, description = "ИИ-автоматизация и креатив студийного уровня в Муйне. Александр Финаев — эксперт с 30-летним стажем." } = Astro.props;

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

// Swiper Styles
import 'swiper/css';
import 'swiper/css/mousewheel';
---

<!doctype html>
<html lang={lang}>
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href={`${import.meta.env.BASE_URL.replace(/\/$/, '')}/favicon.svg`} />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<meta name="description" content={description} />
		
		<!-- Google Fonts -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&family=Playfair+Display:wght@700&display=swap" rel="stylesheet">
		<link href="https://cdn.jsdelivr.net/npm/remixicon@4.2.0/fonts/remixicon.css" rel="stylesheet" />

		<script is:inline>
			const theme = (() => {
				if (typeof localStorage !== 'undefined' && localStorage.getItem('theme')) {
					return localStorage.getItem('theme');
				}
				return 'light';
			})();

			if (theme === 'dark') {
				document.documentElement.classList.add('dark');
			} else {
				document.documentElement.classList.remove('dark');
			}
		</script>
	</head>
	<body>
		<header class="main-header">
			<div class="container header-inner">
				<a href={lang === 'ru' ? import.meta.env.BASE_URL : `${import.meta.env.BASE_URL.replace(/\/$/, '')}/${lang}/`} class="logo-link" aria-label={lang === 'ru' ? 'На главную' : 'Home'}>
					<div class="logo">
						{lang === 'ru' ? 'Александр Финаев' : 'Alexander Finaev'}
					</div>
				</a>
				<div class="header-controls">
					<ThemeSwitcher />
					<LanguagePicker />
				</div>
			</div>
		</header>

		<main class="swiper">
			<div class="swiper-wrapper">
				<slot />
				
				<footer class="main-footer">
					<div class="container">
						<div class="footer-bottom">
							{t('footer.copy')}
						</div>
					</div>
				</footer>
			</div>
		</main>

		<style is:global>
			.logo-link {
				text-decoration: none;
				color: inherit;
				cursor: pointer;
			}

			/* Ensure Swiper takes full height */
			:root, body {
				height: 100%;
				margin: 0;
				overflow: hidden; /* Prevent native scroll */
			}
			.swiper {
				width: 100%;
				height: 100vh;
			}
			.swiper-slide {
				height: 100vh; /* Force slides to full viewport */
				overflow: hidden;
			}
            /* Allow footer to be auto height if needed, but for vertical swiper mostly fixed height is better. 
               Let's try auto height for footer if it's the last slide. */
            .main-footer.swiper-slide {
                height: auto;
                min-height: 100vh; /* Make it full screen to match others for consistency, or let it be auto */
                display: flex;
                flex-direction: column;
                justify-content: flex-end; /* Bottom align footer content */
            }
		</style>

		<script>
            import Swiper from 'swiper';
            import { Mousewheel } from 'swiper/modules';

			document.addEventListener('DOMContentLoaded', () => {
				const logoLink = document.querySelector('.logo-link') as HTMLAnchorElement;
				const main = document.querySelector('main');
				
				logoLink?.addEventListener('click', (e) => {
					const targetUrl = new URL(logoLink.href, window.location.origin);
					if (targetUrl.pathname === window.location.pathname) {
						e.preventDefault();
                        // Reset Swiper to first slide
                        const swiperEl = document.querySelector('.swiper') as any;
                        if (swiperEl && swiperEl.swiper) {
                             swiperEl.swiper.slideTo(0);
                        }
					}
				});

                // Initialize Swiper
                const wrapper = document.querySelector('.swiper-wrapper');
                if (wrapper) {
                    // Add swiper-slide class to all direct children (sections and footer)
                    Array.from(wrapper.children).forEach(child => {
                        child.classList.add('swiper-slide');
                    });
                }

                const swiper = new Swiper('.swiper', {
                    modules: [Mousewheel],
                    direction: 'vertical',
                    speed: 800,
                    simulateTouch: false, // Disable mouse drag on desktop
                    mousewheel: {
                        forceToAxis: true,
                        sensitivity: 1,
                        thresholdDelta: 50, // Optimize for notched mice vs trackpads
                    },
                    slidesPerView: 1,
                    spaceBetween: 0,
                    keyboard: {
                        enabled: true,
                    },
                });
			});
		</script>
	</body>
</html>
