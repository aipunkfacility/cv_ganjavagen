---
import '../styles/index.css';
import { getLangFromUrl, useTranslations } from '../i18n/utils';
import LanguagePicker from '../components/LanguagePicker.astro';
import ThemeSwitcher from '../components/ThemeSwitcher.astro';

interface Props {
	title: string;
	description?: string;
}

const { title, description = "ИИ-автоматизация и креатив студийного уровня в Муйне. Александр Финаев — эксперт с 30-летним стажем." } = Astro.props;

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

// Swiper Styles

---

<!doctype html>
<html lang={lang}>
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href={`${import.meta.env.BASE_URL.replace(/\/$/, '')}/favicon.svg`} />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<meta name="description" content={description} />
		
		<!-- Google Fonts -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&family=Playfair+Display:wght@700&display=swap" rel="stylesheet">
		<link href="https://cdn.jsdelivr.net/npm/remixicon@4.2.0/fonts/remixicon.css" rel="stylesheet" />

		<script is:inline>
			const theme = (() => {
				if (typeof localStorage !== 'undefined' && localStorage.getItem('theme')) {
					return localStorage.getItem('theme');
				}
				return 'light';
			})();

			if (theme === 'dark') {
				document.documentElement.classList.add('dark');
			} else {
				document.documentElement.classList.remove('dark');
			}
		</script>
	</head>
	<body>
		<header class="main-header">
			<div class="container header-inner">
				<a href={lang === 'ru' ? import.meta.env.BASE_URL : `${import.meta.env.BASE_URL.replace(/\/$/, '')}/${lang}/`} class="logo-link" aria-label={lang === 'ru' ? 'На главную' : 'Home'}>
					<div class="logo">
						{lang === 'ru' ? 'Александр Финаев' : 'Alexander Finaev'}
					</div>
				</a>
				<div class="header-controls">
					<ThemeSwitcher />
					<LanguagePicker />
				</div>
			</div>
		</header>

		<main class="main-content">
			<slot />
			
			<footer class="main-footer">
				<div class="container">
					<div class="footer-bottom">
						{t('footer.copy')}
					</div>
				</div>
			</footer>
		</main>

		<style is:global>
			.logo-link {
				text-decoration: none;
				color: inherit;
				cursor: pointer;
			}

			/* Ensure full height */
			:root, body {
				height: auto;
				margin: 0;
			}
			.main-content {
				width: 100%;
				min-height: 100vh;
			}
		</style>

		<script>
			document.addEventListener('DOMContentLoaded', () => {
				const logoLink = document.querySelector('.logo-link') as HTMLAnchorElement;
				
				logoLink?.addEventListener('click', (e) => {
					const targetUrl = new URL(logoLink.href, window.location.origin);
					if (targetUrl.pathname === window.location.pathname) {
						e.preventDefault();
						window.scrollTo({ top: 0, behavior: 'smooth' });
					}
				});
			});
		</script>
	</body>
</html>
