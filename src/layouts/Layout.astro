---
import '../styles/index.css';
import { getLangFromUrl, useTranslations } from '../i18n/utils';
import LanguagePicker from '../components/LanguagePicker.astro';
import ThemeSwitcher from '../components/ThemeSwitcher.astro';

interface Props {
	title: string;
	description?: string;
}

const { title, description = "ИИ-автоматизация и креатив студийного уровня в Муйне. Александр Финаев — эксперт с 30-летним стажем." } = Astro.props;

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<!doctype html>
<html lang={lang}>
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href={`${import.meta.env.BASE_URL.replace(/\/$/, '')}/favicon.svg`} />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<meta name="description" content={description} />
		
		<!-- Google Fonts -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&family=Playfair+Display:wght@700&display=swap" rel="stylesheet">
		<link href="https://cdn.jsdelivr.net/npm/remixicon@4.2.0/fonts/remixicon.css" rel="stylesheet" />

		<script is:inline>
			const theme = (() => {
				if (typeof localStorage !== 'undefined' && localStorage.getItem('theme')) {
					return localStorage.getItem('theme');
				}
				return 'light';
			})();

			if (theme === 'dark') {
				document.documentElement.classList.add('dark');
			} else {
				document.documentElement.classList.remove('dark');
			}
		</script>
	</head>
	<body>
		<header class="main-header">
			<div class="container header-inner">
				<a href={lang === 'ru' ? import.meta.env.BASE_URL : `${import.meta.env.BASE_URL.replace(/\/$/, '')}/${lang}/`} class="logo-link" aria-label={lang === 'ru' ? 'На главную' : 'Home'}>
					<div class="logo">
						{lang === 'ru' ? 'Александр Финаев' : 'Alexander Finaev'}
					</div>
				</a>
				<div class="header-controls">
					<ThemeSwitcher />
					<LanguagePicker />
				</div>
			</div>
		</header>

		<main>
			<slot />
			
			<footer class="main-footer">
				<div class="container">
					<div class="footer-bottom">
						{t('footer.copy')}
					</div>
				</div>
			</footer>
		</main>

		<style is:global>
			.logo-link {
				text-decoration: none;
				color: inherit;
				cursor: pointer;
			}
		</style>

		<script>
			document.addEventListener('DOMContentLoaded', () => {
				const logoLink = document.querySelector('.logo-link') as HTMLAnchorElement;
				const main = document.querySelector('main');
				
				logoLink?.addEventListener('click', (e) => {
					const targetUrl = new URL(logoLink.href, window.location.origin);
					if (targetUrl.pathname === window.location.pathname) {
						e.preventDefault();
						if (main) main.scrollTop = 0;
					}
				});

				// Wheel Navigation for notched mice
				let isScrolling = false;
				const SNAP_TARGETS_SELECTOR = 'main > section, footer.main-footer';

				main?.addEventListener('wheel', (e) => {
					// Detection heuristic: e.deltaMode === 1 for Firefox Windows (lines), 
					// and >= 50 pixels for other browsers to catch discrete wheels.
					const isDiscrete = e.deltaMode === 1 || Math.abs(e.deltaY) >= 50;

					if (!isDiscrete) return;

					if (isScrolling) {
						e.preventDefault();
						return;
					}

					e.preventDefault();
					isScrolling = true;

					const direction = e.deltaY > 0 ? 1 : -1;
					const scrollPadding = 64; // 4rem matching scroll-padding-top
					const targets = Array.from(document.querySelectorAll(SNAP_TARGETS_SELECTOR)) as HTMLElement[];
					
					// Detect if we are effectively at the bottom (for footer logic)
					const isAtBottom = Math.abs(main.scrollHeight - main.clientHeight - main.scrollTop) < 10;

					// Find the closest index by distance to (scrollTop + padding)
					let closestIndex = targets.reduce((closestIdx, t, idx) => {
						const dist = Math.abs(t.offsetTop - (main.scrollTop + scrollPadding));
						const minDist = Math.abs(targets[closestIdx].offsetTop - (main.scrollTop + scrollPadding));
						return dist < minDist ? idx : closestIdx;
					}, 0);

					// Boundary override: if browser clamped scroll at the bottom, we are on the footer
					if (isAtBottom) closestIndex = targets.length - 1;

					// Determine target index within array bounds
					const targetIndex = Math.max(0, Math.min(targets.length - 1, closestIndex + direction));

					if (targetIndex !== closestIndex) {
						targets[targetIndex].scrollIntoView({
							behavior: 'smooth',
							// Use 'end' for footer to match CSS scroll-snap-align: end
							block: targetIndex === targets.length - 1 ? 'end' : 'start'
						});
					}

					setTimeout(() => {
						isScrolling = false;
					}, 800);
				}, { passive: false });
			});
		</script>
	</body>
</html>
